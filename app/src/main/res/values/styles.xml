<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="H6" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="H6.Medium" parent="H6">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextXS.Regular" parent="TextXS">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextXS.Medium" parent="TextXS">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextS.Regular" parent="TextS">
        <item name="fontWeight">400</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextField">
        <item name="backgroundTint">@color/white</item>
    </style>

</resources>