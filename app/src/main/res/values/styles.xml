<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="H4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">36sp</item>
        <item name="lineHeight">44sp</item>
    </style>

    <style name="H4.Regular" parent="H4">
        <item name="fontWeight">400</item>
    </style>

    <style name="H6" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="H6.Medium" parent="H6">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextXS.Regular" parent="TextXS">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextXS.Medium" parent="TextXS">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextS.Regular" parent="TextS">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextS.Medium" parent="TextS">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Text.Semibold" parent="Text">
        <item name="fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextL" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="TextL.Medium" parent="Text">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXL" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">30sp</item>
    </style>

    <style name="TextXL.Medium" parent="TextXL">
        <item name="fontWeight">500</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextField">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_dropdown_trip</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

</resources>