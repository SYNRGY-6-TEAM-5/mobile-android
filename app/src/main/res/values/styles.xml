<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="H4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">36sp</item>
        <item name="lineHeight">44sp</item>
    </style>

    <style name="H4.Regular" parent="H4">
        <item name="fontWeight">400</item>
    </style>

    <style name="H5" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30sp</item>
        <item name="lineHeight">38sp</item>
    </style>

    <style name="H5.Semibold" parent="H5">
        <item name="fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H6" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="H6.Medium" parent="H6">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H6.Semibold" parent="H6">
        <item name="fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">18sp</item>
    </style>

    <style name="TextXS.Regular" parent="TextXS">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextXS.Medium" parent="TextXS">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextS" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
    </style>

    <style name="TextS.Regular" parent="TextS">
        <item name="fontWeight">400</item>
    </style>

    <style name="TextS.Medium" parent="TextS">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextS.Semibold" parent="TextS">
        <item name="fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="fontWeight">400</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Semibold" parent="Text">
        <item name="fontWeight">600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextL" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="TextL.Medium" parent="TextL">
        <item name="fontWeight">500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextXL" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">30sp</item>
    </style>

    <style name="TextXL.Medium" parent="TextXL">
        <item name="fontWeight">500</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAppearance">@style/TextS.Medium</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Button.Primary" parent="Button">
        <item name="backgroundTint">@color/primary_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextField">
        <item name="backgroundTint">@color/white</item>
    </style>
  
    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_dropdown_trip</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_selector</item>
        <item name="chipStrokeColor">@color/gray_300</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/gray_300</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_chip_selector</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ChipWhiteXSMedium" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipCornerRadius">33dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontWeight">500</item>
        <item name="lineHeight">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="ChipOutline" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textAppearance">@style/TextS.Medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="chipStrokeColor">@color/gray_200</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="rippleColor">@color/gray_200</item>
    </style>

    <style name="ChipOutline.Primary" parent="ChipOutline">
        <item name="chipBackgroundColor">@color/bg_chip_outline_selector</item>
        <item name="android:textColor">@color/color_chip_outline_selector</item>
        <item name="chipIconTint">@color/color_chip_outline_selector</item>
    </style>

    <style name="AutoCompleteTextView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textAppearance">@style/Text</item>
    </style>

</resources>