<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SearchActivity"
    android:paddingTop="50dp"
    android:background="@color/base_black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_black"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_toolbar_title"
            style="@style/Text.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/selected_flight"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:src="@drawable/ef_ic_arrow_back"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_pen"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="80dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_flight_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/base_black"
                android:paddingTop="32dp"
                android:paddingBottom="40dp"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/iv_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_item_search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_details_arrival"
                    style="@style/H6.Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/cgk"
                    android:textColor="@color/primary_500"
                    app:layout_constraintStart_toEndOf="@+id/iv_flight"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_details_departure"
                    style="@style/H6.Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/yia"
                    android:textColor="@color/primary_500"
                    app:layout_constraintEnd_toStartOf="@+id/iv_flight"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_departure_search"
                    style="@style/Text.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_departure"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/tv_details_departure"
                    app:layout_constraintStart_toStartOf="@+id/tv_details_departure"
                    app:layout_constraintTop_toBottomOf="@+id/tv_details_departure" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_arrival_search"
                    style="@style/Text.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_arrival"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/tv_details_arrival"
                    app:layout_constraintStart_toStartOf="@+id/tv_details_arrival"
                    app:layout_constraintTop_toBottomOf="@+id/tv_details_arrival" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/search_date"
                    style="@style/TextXS.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_date"
                    android:textColor="@color/gray_100"
                    app:layout_constraintEnd_toStartOf="@id/search_passenger"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/part_1" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/part_1"
                    style="@style/TextXS.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textColor="@color/gray_100"
                    app:layout_constraintEnd_toStartOf="@id/search_passenger"
                    app:layout_constraintStart_toEndOf="@id/search_date"
                    app:layout_constraintTop_toTopOf="@+id/search_passenger" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/search_passenger"
                    style="@style/TextXS.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_passenger"
                    android:textColor="@color/gray_100"
                    app:layout_constraintEnd_toStartOf="@id/part_2"
                    app:layout_constraintStart_toEndOf="@id/part_1"
                    app:layout_constraintTop_toTopOf="@+id/part_2" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/part_2"
                    style="@style/TextXS.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/gray_100"
                    app:layout_constraintEnd_toStartOf="@id/search_class"
                    app:layout_constraintStart_toEndOf="@id/search_passenger"
                    app:layout_constraintTop_toTopOf="@+id/search_class" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/search_class"
                    style="@style/TextXS.Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/search_class"
                    android:textColor="@color/gray_100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/part_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_departure_search" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_flight_details">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_search_flight" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>