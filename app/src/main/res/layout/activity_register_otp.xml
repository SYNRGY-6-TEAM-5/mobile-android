<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".presentation.VerificationActivity"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp">

        <com.google.android.material.textview.MaterialTextView
            style="@style/H6.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/verification_title"
            android:textColor="@color/base_black" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/H6.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/verification_desc_otp"
            android:textColor="@color/gray_600"
            android:textSize="15dp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/H6.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verification_email_otp"
            android:textColor="@color/gray_700"
            android:textSize="15dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/change_email"
            style="@style/H6.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/verification_change_email"
            android:textColor="@color/primary_500"
            android:textSize="15dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="323dp"
            android:layout_height="131dp"
            android:layout_marginStart="30dp">

            <EditText
                android:id="@+id/otpEditText1"
                android:layout_width="62dp"
                android:layout_height="67dp"
                android:background="@drawable/shape_gray_100"
                android:ems="10"
                android:gravity="center"
                android:hint="-"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.356"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/otpEditText2"
                android:layout_width="62dp"
                android:layout_height="67dp"
                android:background="@drawable/shape_gray_100"
                android:ems="10"
                android:gravity="center"
                android:hint="-"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.061"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/otpEditText3"
                android:layout_width="62dp"
                android:layout_height="67dp"
                android:background="@drawable/shape_gray_100"
                android:ems="10"
                android:gravity="center"
                android:hint="-"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.639"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/otpEditText4"
                android:layout_width="62dp"
                android:layout_height="67dp"
                android:background="@drawable/shape_gray_100"
                android:ems="10"
                android:gravity="center"
                android:hint="-"
                android:inputType="number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.938"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextXS.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:text="@string/resend_otp"
            android:textColor="@color/gray_600" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time_resend"
            style="@style/H6.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/resend_otp_time"
            android:textColor="@color/primary_500"
            android:textSize="15dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Confirm" />


    </LinearLayout>

</FrameLayout>