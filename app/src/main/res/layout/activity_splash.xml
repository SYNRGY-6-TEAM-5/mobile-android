<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.SplashActivity">

    <ImageView
        android:id="@+id/img_splash_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_splash_text"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_logo" />

    <ImageView
        android:id="@+id/img_splash_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_splash_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_logo_text"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>