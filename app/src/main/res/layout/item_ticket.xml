<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ticket"
    android:paddingHorizontal="12dp"
    android:paddingTop="12dp"
    android:layout_marginBottom="12dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_time"
        style="@style/H6.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="09:60"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_departure"
        style="@style/TextXS.Regular"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:text="Yogyakarta"
        android:textColor="@color/gray_300"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time" />

    <ImageView
        android:id="@+id/img_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/img_flight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1h 2m"
        android:textColor="@color/gray_100"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        style="@style/TextXS.Regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_flight"/>

    <TextView
        android:id="@+id/tv_time_arrival"
        style="@style/H6.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="13:35"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_arrival"
        style="@style/TextXS.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="Dubai"
        android:textColor="@color/gray_300"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_arrival" />


    <ImageView
        android:id="@+id/img_plane"
        android:layout_width="24dp"
        android:layout_height="11dp"
        android:background="@drawable/img_plane"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_plane"
        app:layout_constraintBottom_toBottomOf="@+id/tv_plane"/>

    <TextView
        android:id="@+id/tv_plane"
        style="@style/H6.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="GA207"
        android:textColor="@color/base_black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/img_plane"
        app:layout_constraintTop_toBottomOf="@id/tv_departure" />

    <TextView
        android:id="@+id/tv_price"
        style="@style/TextS.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:text="IDR 1,021,210"
        android:textColor="@color/primary_500"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_departure" />
</androidx.constraintlayout.widget.ConstraintLayout>