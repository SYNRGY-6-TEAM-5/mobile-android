<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragment.forgotpassword.ForgotPassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            style="@style/H6.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_verification"
            android:textColor="@color/base_black"
            android:layout_marginTop="30dp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextXS.Regular"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_verification_desc"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="30dp"/>

        <RadioGroup
            android:id="@+id/radio_group_input_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_500"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_phone"
                android:layout_width="match_parent"
                android:buttonTint="@color/primary_500"
                android:drawableRight="@drawable/outline_phone"
                android:hint=" +62-738-****-****"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/radio_email"
                android:layout_width="match_parent"
                android:buttonTint="@color/primary_500"
                android:drawableRight="@drawable/outline_mail"
                android:hint=" te****@*****.com"
                android:gravity=""
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_send_code"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Code"
            android:layout_marginTop="40dp" />

    </LinearLayout>

</FrameLayout>