<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragment.accountsetup.AccountDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="45dp"
        android:gravity="center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextS.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setup_profile"
            android:textColor="@color/base_black"/>

        <LinearLayout
            android:id="@+id/iv_profile_setup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="45dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_profile_placeholder"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_profile_icon"
                android:layout_gravity="end"
                android:layout_marginTop="-40dp"/>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextS.Medium"
            android:id="@+id/tv_upload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_image"
            android:textColor="@color/primary_500"
            android:layout_marginTop="17dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/account_detail_til_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextField"
                android:id="@+id/account_detail_ti_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/account_detail_til_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/date_of_birth_dd_mm_yyyy"
            android:layout_marginBottom="20dp">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextField"
                android:id="@+id/account_detail_ti_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/account_detail_til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number"
            app:prefixText="@string/_62">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/TextField"
                android:id="@+id/account_detail_ti_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_confirm_code_account_detail"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:layout_marginTop="60dp" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextXL.Medium"
            android:id="@+id/tv_skip_account_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/skip"
            android:textColor="@color/gray_300"
            android:layout_marginTop="120dp"/>

    </LinearLayout>

</ScrollView>