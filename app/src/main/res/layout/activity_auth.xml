<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.AuthActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_black"
        app:tabIndicator="@drawable/tab_auth_inset"
        app:tabIndicatorHeight="4dp"
        app:tabMinWidth="80dp"
        app:tabMode="scrollable"
        app:tabRippleColor="@color/transparent"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/Text.Medium"
        app:tabTextColor="@color/gray_700"
        android:paddingTop="60dp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager_auth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>